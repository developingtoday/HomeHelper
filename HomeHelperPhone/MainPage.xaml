                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <chartToolkit:Title Content="{TemplateBinding Title}" Style="{TemplateBinding TitleStyle}"/>
